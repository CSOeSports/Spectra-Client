{
  "name": "spectra-client",
  "author": {
    "name": "Valo Spectra",
    "url": "https://www.valospectra.com"
  },
  "version": "0.2.0",
  "description": "https://www.valospectra.com",
  "private": true,
  "main": "./app/main.js",
  "overwolf": {
    "packages": [
      "gep"
    ]
  },
  "scripts": {
    "start": "rimraf app && npx tsc && copy-files-from-to && ow-electron . --owepm-packages-url=https://electronapi-qa.overwolf.com/packages",
    "start:live": "rimraf app && npx tsc && copy-files-from-to && ow-electron .",
    "build": "rimraf app && npx tsc && copy-files-from-to && rimraf dist && ow-electron-builder --publish=never",
    "postinstall": "ow-electron-builder install-app-deps"
  },
  "copyFiles": [
    {
      "from": "src/frontend/*",
      "to": "app/frontend/"
    },
    {
      "from": "src/assets/*",
      "to": "app/assets/"
    },
    {
      "from": "src/preload.js",
      "to": "app/preload.js"
    }
  ],
  "build": {
    "productName": "Spectra Client",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": false
    }
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@overwolf/ow-electron-builder": "^24.13.8",
    "@overwolf/ow-electron-packages-types": "^0.0.12",
    "@overwolf/types": "^3.24.7",
    "@types/node": "^22.5.5",
    "@types/semver": "^7.5.8",
    "@types/ws": "^8.5.10",
    "copy-files-from-to": "^3.11.0",
    "electron": "^32.1.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@overwolf/ow-electron": "^31.4.0",
    "axios": "^1.7.7",
    "bufferutil": "^4.0.8",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "semver": "^7.6.3",
    "socket.io-client": "^4.8.0"
  }
}
